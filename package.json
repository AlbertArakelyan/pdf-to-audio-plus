{
  "name": "pdf-to-audio",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electronmon .",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:all": "electron-builder --mac --win"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "gtts": "^0.2.1",
    "multer": "^1.4.5-lts.1",
    "pdf-parse": "^1.1.1",
    "say": "^0.16.0"
  },
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "electronmon": "^2.0.3"
  },
  "build": {
    "appId": "com.example.pdftoaudio",
    "productName": "PDFTextToAudio",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "index.html",
      "assets/js/renderer.js",
      "assets/**/*"
    ],
    "mac": {
      "target": "dmg",
      "icon": "assets/icons/mac/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icons/win/icon.ico"
    }
  }
}
